{
  "name": "noded",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node scripts/fix-imports.js",
    "build:server": "tsc -p tsconfig.server.json",
    "build:all": "npm run build && npm run build:server",
    "clear-db": "node clear-database.js",
    "build:strict": "tsc --strict --noEmit && eslint . && npm run build",
    "dev": "tsc --watch",
    "serve": "python3 -m http.server 8000",
    "server": "npm run build:all && node server.js",
    "start": "npm run build && npm run serve",
    "typecheck": "tsc --noEmit --strict",
    "lint": "eslint . --max-warnings 0",
    "test": "jest",
    "test:failed": "jest --verbose=false --silent",
    "test:quiet": "jest --silent --reporters=default",
    "test:summary": "jest --verbose=false --noStackTrace",
    "test:list": "jest --listTests --silent",
    "test:watch": "jest --watch",
    "test:coverage": "RUN_COVERAGE=true jest",
    "test:ci": "RUN_COVERAGE=true jest --ci --watchAll=false",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.5.3"
  },
  "private": true,
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^5.0.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "isomorphic-dompurify": "^2.25.0",
    "sqlite3": "^5.1.7"
  }
}
