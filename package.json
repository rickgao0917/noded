{
  "name": "noded",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:strict": "tsc --strict --noEmit && eslint . && npm run build",
    "dev": "tsc --watch",
    "serve": "python3 -m http.server 8000",
    "server": "npm run build && node server.js",
    "start": "npm run build && npm run serve",
    "typecheck": "tsc --noEmit --strict",
    "lint": "eslint . --max-warnings 0",
    "test": "jest",
    "test:failed": "jest --verbose=false --silent",
    "test:quiet": "jest --silent --reporters=default",
    "test:summary": "jest --verbose=false --noStackTrace",
    "test:list": "jest --listTests --silent",
    "test:watch": "jest --watch",
    "test:coverage": "RUN_COVERAGE=true jest",
    "test:ci": "RUN_COVERAGE=true jest --ci --watchAll=false",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.5.3"
  },
  "private": true
}
